    "test": "vitest",
    "format": "eslint ./app --fix",
    "//": "REF: https://the-guild.dev/graphql/codegen/docs/config-reference/require-field > Customize loaded env file",
    "codegen": "DOTENV_CONFIG_PATH='../.env' graphql-codegen --require dotenv/config --config codegen.ts"
  },
  "dependencies": {
    "@apollo/client": "^3.12.3",
