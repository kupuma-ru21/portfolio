    "react-dom": "19.0.0",
    "react-i18next": "^15.2.0",
    "react-icons": "^5.4.0",
    "remix-i18next": "^7.0.1",
    "resend": "^4.0.1"
  },
  "//": "https://github.com/remix-run/indie-stack/issues/184#issuecomment-2154369582",
